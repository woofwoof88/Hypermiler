<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/calc_screen_no_text">
    <RelativeLayout android:layout_width="fill_parent"
    	android:orientation="vertical" 
    	android:id="@+id/screenLayout" android:layout_height="fill_parent">
        <View android:layout_width="fill_parent" android:layout_height="60dp"/>
        
		<TableLayout
		    android:layout_width="fill_parent"
		    android:stretchColumns="1|2"
		    android:layout_height="wrap_content" android:weightSum="5">
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:visibility="invisible"
		            android:textColor="@android:color/black" android:text="Distance Covered:" android:layout_width="wrap_content" android:layout_height="30dp"/>
        	</TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="Distance Covered:" android:layout_width="120dp"/>
		        <View android:layout_height="1dp" android:layout_width="40dp"/>
		        <EditText
		        	android:id="@+id/DistanceCovered"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:background="@android:color/transparent" android:imeOptions="actionNext" android:paddingRight="5dp"
		            android:hint="................." android:inputType="number" android:gravity="right|center_vertical"/>
	        </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="Litres of fuel used:"/>
		        <View android:id="@+id/view1" android:layout_width="20dp" android:layout_height="1dp"></View>
		        <EditText
		        	android:id="@+id/LitresFuelUsed"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:background="@android:color/transparent" android:imeOptions="actionGo" android:paddingRight="5dp"
		            android:hint="................." android:inputType="number" android:gravity="right|center_vertical"/>
		    </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="Cost per litre (pence)"/>
		        <View android:layout_height="1dp" android:id="@+id/View01" android:layout_width="20dp"></View>
		        <EditText
		        	android:id="@+id/CostPerLitre"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:background="@android:color/transparent" android:imeOptions="actionNext" android:hint="................." android:inputType="number|numberDecimal" android:gravity="right|center_vertical"/>
		    </TableRow>


		    <TableRow
		        android:layout_height="25dp"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <Button android:id="@+id/button1" android:layout_width="wrap_content" android:text="Calculate" android:layout_gravity="center_horizontal" android:textSize="12dp" android:layout_height="wrap_content"></Button>
		    </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="Your MPG is:" android:textSize="26sp"/>
		        <View android:layout_height="1dp" android:id="@+id/View01" android:layout_width="20dp"></View>
		        <TextView
		        	android:id="@+id/MPG"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:background="@android:color/transparent" android:gravity="left|center_vertical" android:textSize="20sp" android:text="................."/>
		    </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="KM per litre:"/>
		        <View android:layout_height="1dp" android:id="@+id/View01" android:layout_width="20dp"></View>
		        <TextView
		        	android:id="@+id/KMPerLitre"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:background="@android:color/transparent" android:gravity="left|center_vertical" android:hint="................." android:editable="false" android:inputType="none"/>
		    </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="Pence per mile:"/>
		        <View android:layout_height="1dp" android:id="@+id/View01" android:layout_width="20dp"></View>
		        <TextView
		        	android:id="@+id/PencePerMile"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:background="@android:color/transparent" android:gravity="left|center_vertical" android:hint="................." android:editable="false"/>
		    </TableRow>
		    <TableRow
		        android:layout_height="wrap_content"
		        android:weightSum="2"
		        android:layout_margin="5dp"
		        >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|center_vertical"
		            android:layout_weight="1"
		            android:textStyle="bold"
		            android:textSize="16sp"
		            android:gravity="right"
		            android:textColor="@android:color/black" android:text="US MPG:"/>
		        <View android:layout_height="1dp" android:id="@+id/View01" android:layout_width="20dp"></View>
		        <TextView
		        	android:id="@+id/US_MPG"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:background="@android:color/transparent" android:gravity="left|center_vertical" android:hint="................." android:editable="false" android:inputType="none"/>
		    </TableRow>
		
		</TableLayout>
		<LinearLayout android:id="@+id/Admob" android:weightSum="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"></LinearLayout>
    </RelativeLayout>
</LinearLayout>
